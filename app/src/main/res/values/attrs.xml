<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标题栏样式-->
    <declare-styleable name="CustomToolBar">
        <!--左按钮是否可见|背景-->
        <attr name="hx_left_btn_visible" format="boolean"/>
        <attr name="hx_left_btn_src" format="reference|color"/>
        <!--左文本是否可见|文本内容-->
        <attr name="hx_left_tv_visible" format="boolean"/>
        <attr name="hx_left_tv_text" format="string"/>
        <!--右边按钮是否可见|背景-->
        <attr name="hx_right_btn_visible" format="boolean"/>
        <attr name="hx_right_btn_src" format="reference|color"/>
        <!--右文本是否可见|文本内容-->
        <attr name="hx_right_tv_visible" format="boolean"/>
        <attr name="hx_right_tv_text" format="string"/>
        <!--标题是否可见|文本内容-->
        <attr name="hx_title_visible" format="boolean"/>
        <attr name="hx_title_text" format="string"/>
        <!--背景-->
        <attr name="hx_background" format="reference|color"/>
    </declare-styleable>

    <!--可折叠的文本视图样式-->
    <declare-styleable name="CollapsibleTextView">
        <attr name="hx_max_lines" format="integer" />
        <attr name="hx_text_size" format="float" />
    </declare-styleable>
</resources>